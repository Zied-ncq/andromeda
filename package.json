{
  "name": "andromeda",
  "version": "1.0.0",
  "type": "module",
  "description": "Mico Service Bpmn generator",
  "main": "index.js",
  "scripts": {
    "start": "node node_modules/nodemon/bin/nodemon.js app.js",
    "test:setup": "node test/setup.js",
    "posttest": "kill-port --port 27018",
    "cover": "npm run cover:unit & npm run cover:integration",
    "cover:unit": "c8 --clean false  --check-coverage true -r html  npm run test:unit",
    "test:unit": "npm-run-all --parallel  test:unit:exec",
    "test:unit:exec": "npx ava --config ava.unit-tests.config.js",
    "cover:integration": "c8 --clean false  --check-coverage true -r html  npm run test:integration",
    "test:integration": "npm-run-all --parallel  test:setup  test:integration:exec",
    "test:integration:exec": "npx ava --config ava.integration-tests.config.js & npm run posttest"
  },
  "author": "Zied Ben Rhouma",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^5.8.3",
    "@fastify/swagger": "^8.14.0",
    "@gquittet/graceful-server": "^5.0.2",
    "ajv": "^8.16.0",
    "bpmn-moddle": "^9.0.1",
    "dotenv": "^16.4.5",
    "env-var": "^8.0.0-beta.0",
    "fastify": "^4.27.0",
    "fastify-multer": "^2.0.3",
    "fastify-oas": "^3.0.8",
    "form-data": "^4.0.0",
    "log4js": "^6.4.4",
    "mongoose": "^8.4.1",
    "nunjucks": "^3.2.4",
    "tree-kill": "^1.2.2",
    "ts-morph": "^22.0.0",
    "uuid": "^8.3.2",
    "yamd5.js": "^1.0.0",
    "yaml": "^2.4.4"
  },
  "devDependencies": {
    "@types/bpmn-moddle": "^5.1.11",
    "fastify-plugin": "^4.5.1",
    "kill-port": "^2.0.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.3.0",
    "node-dev": "^8.0.0",
    "node-ipc": "^11.1.0",
    "nodemon": "^3.1.3",
    "npm-run-all": "^4.1.5",
    "ps-list": "^8.1.1",
    "rimraf": "^5.0.7",
    "sinon": "^18.0.0"
  }
}
